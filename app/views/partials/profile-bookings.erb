
          <h2>My bookings</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Price per night</th>
                  <th>Check in</th>
                  <th>Check out</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <%if @bookings != nil%>
                <% @bookings.each do |booking| %>
                <tr class="booking">
                  <% d1 = booking.check_in %>
          <% d2 = booking.check_out %>
