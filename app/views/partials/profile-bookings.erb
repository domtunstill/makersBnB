                    >
                      <input type="hidden" name="_method" value="DELETE" />
                      <input
                        type="submit"
                        value="Cancel Booking"
                        class="btn btn-secondary btn-sm"
                      />
                    </form>
                  </td>
                </tr>
                <% end %>
                 <% else %>
                <% end %>
              </tbody>
            </table>
          </div>
