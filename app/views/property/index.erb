<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <%= partial(:'partials/header-links') %>
    <title>Hello, world!</title>
  </head>
  <body>
    <%= partial(:'partials/header') %>

    <div class="container">
      <div class="row">
        <div class="col-12">
          <div
            class="jumbotron "
            style="background-image: url('<%= @property.image %>');
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  color: #eee;height:500px;"
          ></div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-8">
          <h1><%= @property.name %></h1>
          
          <p>Â£<%= @property.price_per_night %> per night  | 
            <%d1 = @property.available_from %> Available From: <%=
            d1.strftime("%A #{d1.day.ordinalize} %B %Y") %>
            <%d2 = @property.available_to %> To: <%= d2.strftime("%A
            #{d2.day.ordinalize} %B %Y") %>
          </p>
          
          <p><%= @property.description %></p>
        </div>

        <div class="col-4 bg-light p-4" >
          <form action="" method="">

            <div class="form-group">
              <label for="check_in">Check out</label>
              <div
                class="input-group date"
                id="check_in"
                data-target-input="nearest"
              >
                <input
                  type="text"
                  class="form-control datetimepicker-input"
                  data-target="#check_in"
                  name="check_in"
                />
                <div
                  class="input-group-append"
                  data-target="#check_in"
                  data-toggle="datetimepicker"
                >
                  <div class="input-group-text">
                    <i class="fa fa-calendar"></i>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="check_out">Check out</label>
              <div
                class="input-group date"
                id="check_out"
                data-target-input="nearest"
              >
                <input
                  type="text"
                  class="form-control datetimepicker-input"
                  data-target="#check_out"
                  name="check_out"
                />
                <div
                  class="input-group-append"
                  data-target="#check_out"
                  data-toggle="datetimepicker"
                >
                  <div class="input-group-text">
                    <i class="fa fa-calendar"></i>
                  </div>
                </div>
              </div>
            </div>


            <div class="form-group">
              <button type="submit" class="btn btn-primary">Book</button>
            </div>
            <script type="text/javascript">
              $(function() {
                $("#check_in").datetimepicker({
                  format: 'L',
                  // defaultDate: moment(<%= @property.available_from %>), 
                  // minDate: moment(<%= @property.available_from.strftime("%F") %>), 
                  minDate: <%= @property.available_from %>, 
                  disabledDates: <%= @dates_booked %>
                });
                $("#check_out").datetimepicker({
                  format: 'L',
                  // defaultDate: <%= @property.available_to.strftime("%F") %>, 
                  disabledDates: <%= @dates_booked %>
                });
              });

            </script>
          </form>
        </div>
      </div>
    </div>

    <%= partial(:'partials/footer') %> <%= partial(:'partials/footer-links') %>
  </body>
</html>
